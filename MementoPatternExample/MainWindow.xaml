<Window x:Class="MementoPatternExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:MementoPatternExample="clr-namespace:MementoPatternExample"
        Title="MainWindow" Height="520" Width="525">
    <Grid Height="500" Width="500">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <MementoPatternExample:InkCanvasWithUndo Height="auto" HorizontalAlignment="Left"
                 x:Name="InkCanvasWithUndo1" VerticalAlignment="Top" Width="auto" Grid.Column="0" />
        <Label Height="28" HorizontalAlignment="Right" Margin="0,0,0,0" Name="label1"
               VerticalAlignment="Top" Width="38" Grid.Column="1" />
    </Grid>
</Window>
